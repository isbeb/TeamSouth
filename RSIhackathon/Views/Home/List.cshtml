@using RSIhackathon.Models
@model IEnumerable<RSIhackathon.Models.Visitor>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last Name</th>
            <th>Arival Date</th>
            <th>ID Number</th>
            <th>ID Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model)
        {
            <tr>
                <td>@visitor.Firstname</td>
                <td>@visitor.Lastname</td>
                <td>@visitor.ArivalDate</td>
                <td>@visitor.IDNumber</td>
                <td>@visitor.IDType</td>
            </tr>
        }
    </tbody>
</table>

